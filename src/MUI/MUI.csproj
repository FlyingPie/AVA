<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
        <TargetFramework>net462</TargetFramework>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="morelinq" Version="3.0.0" />
        <PackageReference Include="System.Numerics.Vectors" Version="4.5.0" />
    </ItemGroup>

    <ItemGroup>
        <Reference Include="FNA">
            <HintPath>..\..\deps\FNA.dll</HintPath>
        </Reference>
        <Reference Include="ImGui.NET">
            <HintPath>..\..\deps\ImGui.NET.dll</HintPath>
        </Reference>
        <Reference Include="System.Net.Http" />
    </ItemGroup>

    <ItemGroup>
      <Folder Include="ImGuiEx\" />
    </ItemGroup>

    <ItemGroup>
      <Compile Update="Deps\FontAwesome\FA.Designer.cs">
        <DesignTime>True</DesignTime>
        <AutoGen>True</AutoGen>
        <DependentUpon>FA.resx</DependentUpon>
      </Compile>
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Update="Deps\FontAwesome\FA.resx">
        <Generator>ResXFileCodeGenerator</Generator>
        <LastGenOutput>FA.Designer.cs</LastGenOutput>
      </EmbeddedResource>
    </ItemGroup>

    <ItemGroup>
      <None Update="Deps\FontAwesome\fa-brands-400.ttf">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </None>
      <None Update="Deps\FontAwesome\fa-regular-400.ttf">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </None>
      <None Update="Deps\FontAwesome\fa-solid-900.ttf">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </None>
    </ItemGroup>

</Project>
